@model GenericApp.Web.Models.TeamViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Equipo</h2>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
            <form asp-action="EditTeam" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CountryId" />

                <partial name="_Team" />

                <div class="form-group">
                    <input type="submit" value="Grabar" class="btn btn-primary" />
                    <a asp-action="Details" asp-route-id="@Model.CountryId" class="btn btn-success">Regresar</a>
                </div>
            </form>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}